<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        input[type=button], input[type=submit], input[type=reset] {
            background-color: #000000;
            border: none;
            color: white;
            padding: 10px 10px;
            text-decoration: none;
            position: relative;
            left: 8px;
            top: 4px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }


        input[type=text], input[type=password] {
            background-color: #ffffff;
            width: 100%;
            padding: 3px 3px;
            margin: 2px 0;
            position: relative;
            left: 8px;
            top: 0px;
            box-sizing: border-box;
            border: 1px solid #555;
            outline: none;
            border-radius: 4px;
        }

            input[type=text]:focus, input[type=password]:focus {
                background-color: rgba(0, 0, 0, 0.2);
                border-radius: 4px;
            }



        table.t1 {
            position: absolute;
            margin-left: 10px;
            margin-top: 50px;
            border-collapse: collapse;
            font-family: Arial, 'Comic Sans MS';
            background: #ffffff;
        }

            table.t1 th, table.t1 td {
                padding: 3px 3px;
            }

            table.t1 thead th {
                background: #a88841;
                text-align: center;
                font-size: 12px;
                color: #000;
                border-bottom: 1px outset rgba(0, 0, 0, 0.3);
            }

            table.t1 tr {
                border-right: 1px outset rgba(0, 0, 0, 0.3);
            }

            table.t1 tbody tr {
                border-bottom: 1px outset rgba(0, 0, 0, 0.3);
            }

                table.t1 tbody tr:nth-child(odd) {
                    background: rgba(0, 0, 0, 0.3);
                }

                table.t1 tbody th, table.t1 tbody tr:nth-child(even) td {
                    border-right: 1px outset rgba(0, 0, 0, 0.3);
                }

            table.t1 tfoot th {
                background: #eeeeee;
                text-align: center;
                font-weight: normal;
                font-size: 10px;
                color: #fff;
            }

            table.t1 tr *:nth-child(3), table.t1 tr *:nth-child(4) {
                text-align: right;
            }

        .container {
            position: relative;
            width: 100%;
            max-width: 400px;
        }

            .container img {
                width: 100%;
                height: auto;
            }

            .container .btn {
                position: absolute;
                top: 56%;
                left: 62%;
                transform: translate(-50%, -50%);
                -ms-transform: translate(-50%, -50%);
                background-color: Transparent;
                background-repeat: no-repeat;
                border: none;
                color: white;
                font-size: 16px;
                padding: 12px 24px;
                border: none;
                cursor: pointer;
                border-radius: 5px;
                text-align: center;
            }

        .show {
            display: block
        }

        .hidde {
            display: none
        }
    </style>
</head>
<body id="pozadina">
     
    <div class="sredina">
        <div class="sredinabg">
            <img src="/Img/LogInBackground.png" style="height: 400px; float: right;" />
            <img src="/Img/ravenDis.png" style="height: 200px; float: left;" />
            <div class="banerbg">
                <div class="baner">
                    <<h2>Crow Cab </h2>
                </div>
            </div>
            <div class="banersep">
            </div>
            <div class="stranicabg">
                <div class="stranica">
                    <div class="container body-content">
                        @RenderBody()
                    </div>
                </div>
            </div>

        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

</html>
